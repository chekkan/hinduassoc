.container
    h1 Edit Event
    form(role="form", name="newEventForm")
        .form-group
            label(for="title") Title
            input.form-control(type="text", id="title", placeholder="Title", ng-model="event.title", required)
        .form-group
            lable(for="venue") Venue
            input.form-control(type="text", id="venue" placeholder="Venue", ng-model="event.venue", required)
        .form-group
            label(for="eventDate") Event Date
            input.form-control(type="date", id="eventDate", ng-model="event.eventDate", required)
        .form-group
            label(for="description") Description
            textarea.form-control(id="description", ng-model="event.description")
        button.btn.btn-primary(type="submit" ng-click="editEvent()", ng-disabled="newEventForm.$invalid") Submit
        | &nbsp;
        a.btn.btn-default(href="/events/{{event._id}}") Cancel